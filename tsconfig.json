{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "static/*": [
        "./static/*"
      ]
    },
    "outDir": "dist",
    "target": "esNext",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/index.test.ts",
    "types/global.d.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
