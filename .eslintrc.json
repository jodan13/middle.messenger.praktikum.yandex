{
  "extends": "airbnb",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "linebreak-style": 0,
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": 2,
    "max-len": [
      1,
      100
    ],
    "max-params": [
      2,
      3
    ]
  },
  "globals": {
    "document": true,
    "foo": true,
    "window": true
  }
}
